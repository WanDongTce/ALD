<view class="header">
  <text>朗读比赛</text>
  <view class='reton_sun' bindtap='topshoop'>
    <image src='/pages/main/images/shopping/arowLt.png' class='reton'></image>
  </view>
</view>
<view class="banner">
  <swiper indicator-dots="true">

    <swiper-item; wx:for="{{imglist}}">
      <image src='{{item.image}}'></image>
      </swiper-item>
  </swiper>
</view>
<view class="time">
  <view class="content_box">
    <view class="name">
      <text>活动时间</text>
    </view>
    <view class="text">
      <text>{{active_time}}--{{end_time}}</text>
    </view>
  </view>
</view>
<view class="introduce">
  <view class="content_box">
    <view class="name">
      <text>活动介绍</text>
    </view>
    <view class="text">
      <text>{{introduction}}</text>
    </view>
  </view>
</view>
<view class="works">
  <view class="title">
    <text>参赛作品</text>
  </view>
  <view class="content_box">
    <view wx:for="{{project_list}}" class="list">
      <view class="photo">
      <image style="height: 90rpx;width:90rpx;" src="{{item.avatar}}"></image>
      </view>
      <view class="text_box">
        <view class="name">
          <text>{{item.audio_name}}</text>
        </view>
        <view class="text">
          <view class="author">
            <image src="/pages/ailangdu/images/maikefeng.png"></image>
            <text>{{item.nickname}}</text>
            <view class="clearfix"></view>
          </view>
          <view class="shijian">
            <image src="/pages/ailangdu/images/shijian.png"></image>
            <text>07：12</text>
            <view class="clearfix"></view>
          </view>
          <view class="dianzan">
            <image src="/pages/ailangdu/images/dianzan.png"></image>
            <text>{{item.luyin_praisenum}}</text>
            <view class="clearfix"></view>
          </view>
          <view class="clearfix"></view>
        </view>
      </view>
      <view class="clearfix"></view>
    </view>
  </view>
</view>
<block wx:if="{{accessStatus==2}}">
  <!-- 活动进行中且未参赛 -->
  <block wx:if="{{playStatus==1}}">
    <view class="kechanyu show_box">
      <text>立即参与</text>
    </view>
  </block>
  <!-- 活动评选中且未参赛 -->
  <block wx:if="{{playStatus==2}}">
    <view class="timeout show_box">
      <text>不在参赛时间内</text>
    </view>
  </block>
  <!-- 活动已结束且未参赛 -->
  <block wx:if="{{playStatus==3}}">
    <view class="timeout show_box">
      <text>您未参加该比赛</text>
    </view>
  </block>
</block>
<block wx:else>
  <view wx:for="{{played_data}}" class="works_sun">
    <view class="photo">
     <image style="height: 90rpx;width:90rpx;" src="{{item.avatar}}"></image>
    </view>
    <view class="text_box">
      <view class="name">
        <text>{{item.audio_name}}</text>
      </view>
      <view class="text">
        <view class="author">
          <image src="/pages/ailangdu/images/maikefeng.png"></image>
          <text>{{item.nickname}}</text>
          <view class="clearfix"></view>
        </view>
        <view class="dianzan">
          <image src="/pages/ailangdu/images/dianzan.png"></image>
          <text>{{item.luyin_praisenum}}</text>
          <view class="clearfix"></view>
        </view>
        <view class="clearfix"></view>
      </view>
    </view>
    <view class="clearfix"></view>
  </view>
</block>
